<section data-section="{{ title }}">

  {{> heading level=3 title=title}}
  
  <table>
    <thead>
      <td class="heading-identifier">Identifier</td>
      <td class="heading-value center">Value</td>
      <td class="heading-example center">Example</td>
    </thead>
    <tbody>
      {{#each ctx}}
        <tr>
          <td class="identifier">
            {{> identity ctx=attributes.identity }}
          </td>
          <td class="value">
            <pre>{{ value }} {{~#if ../original-value}} /*{{original.value}}*/{{/if}}</pre>
          </td>
          <td class="example">
            {{> (lookup .. 'example')
                value=value
                class=attributes.identity.html.class
                variable=attributes.identity.css.customProperty
            }}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

</section>