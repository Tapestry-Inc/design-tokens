{{> section-heading title='Font Size'}}
  
<table>
  <thead>
    <td class="heading-identifier">Identifier</td>
    <td class="heading-value center">Value</td>
    <td class="heading-example center">Example</td>
  </thead>
  <tbody>
    {{#each fontSize as | font |}}
      <tr class="font">
        <td class="identifier">
          <ul>
            <li><span>CSS</span> <code>{{ font.attributes.identity.css.customProperty }}</code></li>
            <li><span>SCSS</span> <code>{{ font.attributes.identity.css.scssVariable }}</code></li>
          </ul>
        </td>
        <td class="value"><pre>{{ font.value }} ({{ font.original.value }})</pre></td>
        <td class="example">
          <div style="font-size: {{ font.value }}; text-align: center;">Aa</div>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
