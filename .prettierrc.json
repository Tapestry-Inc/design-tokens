{
  "endOfLine": "lf",
  "jsxSingleQuote": false,
  "printWidth": 80,
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "overrides": [
    {
      "files": "*.hbs",
      "options": {
        "tabWidth": 2,
        "parser": "glimmer",
        "singleQuote": false,
        "printWidth": 160
      }
    },
    {
      "files": "*.js",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
